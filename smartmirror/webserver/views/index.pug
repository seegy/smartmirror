extends layout

block content
  div.main(onload="init()")
    div.module#head
      div.row.vcenter
        div.col-md-7.welcome
          p#hello Hallo.
        div.col-md-4.col-md-offset-1.time
          div.row
            div.col-md-12#clock
            div.col-md-12#date
            div.col-md-12
              div.row
                div.col-md-3.col-md-offset-3
                  a(data-icon='A').icon#headWeatherIcon
                div.col-md-3#headTemp
                div.col-md-1
                  a(data-icon='*').icon
    div(data-jcarousel="true").jcarousel.slide
      //div.carousel-inner.module-hook
      ul(style="left: 0px; top: 0px;").module-hook
